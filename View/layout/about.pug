        .content-title.flex.gap-2.items-centers
            ion-icon(name="people").p-2.bg-pink.rounded-full.text-white.font-medium
            span.text-sm.text-pink.font-medium Our Team 
        .content-header.flex.justify-between.items-center.pt-2
            h3.text-h1.text-third.font-bold Expart Management Team
            .icon-arrow.flex-center
                ion-icon(name="chevron-back").p-2.bg-slate-100.text-gray.rounded-sm
                ion-icon(name="chevron-forward").p-2.bg-slate-100.text-gray.rounded-sm

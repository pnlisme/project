extend ./views/layout/dashboard
block title
  title Đăng nhập
append stylesheet
  link(rel="stylesheet", href="./css/login.css")
block login
  .login
    .login-header
      h3.title Đăng nhập
    .login-container
      form(action="/login", method="POST")
        .form-group
          label(for="username") Tài khoản:
          input#username.form-control(type="text", name="username", placeholder="Nhập tên người dùng của bạn")
        .form-group
          label(for="password") Mật khẩu:
          input#password.form-control(type="password", name="password", placeholder="Nhập mật khẩu của bạn")
        button.button(type="submit") Đăng nhập

